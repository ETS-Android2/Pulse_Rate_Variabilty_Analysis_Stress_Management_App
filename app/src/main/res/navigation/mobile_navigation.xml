<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_measure">

    <fragment
        android:id="@+id/navigation_measure"
        android:name="com.example.stressmanagementapp.ui.measure.MeasureFragment"
        android:label="@string/title_measure"
        tools:layout="@layout/fragment_measure" />

    <fragment
        android:id="@+id/navigation_monitoring"
        android:name="com.example.stressmanagementapp.ui.monitoring.MonitoringFragment"
        android:label="@string/title_monitoring"
        tools:layout="@layout/fragment_monitoring_norecord" />

    <fragment
        android:id="@+id/navigation_statistic"
        android:name="com.example.stressmanagementapp.ui.statistic.StatisticFragment"
        android:label="@string/title_statistic"
        tools:layout="@layout/fragment_statistic_activity_result" />
    <fragment
        android:id="@+id/navigation_setting"
        android:name="com.example.stressmanagementapp.ui.setting.SettingFragment"
        android:label="@string/title_setting"
